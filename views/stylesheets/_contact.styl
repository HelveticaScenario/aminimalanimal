/*
	contactform
	*/

form
	width: 100%
	float: left
	label
		float: left
		user-select: none

input[type="email"]
	width: 100%
	height: 50px
	text-indent: 1rem
	@media (min-width: oneoftwobreak)
		height: 40px

input[type="email"], textarea
	box-sizing: border-box
	margin: 0
	padding: 0
	float: left
	border: solid 1px black
	border-radius: 0
	box-shadow: inset 1px 1px 3px 0px rgba(0,0,0,0.25), 1px 1px 1px 0px rgba(255,255,255,1)
	// text-shadow: 1px 1px 0px rgba(0,0,0,0.15)

textarea
	width: 100%
	max-width: 100%
	height: 145px
	padding: 10px 1rem
	// padding: 3% 5% 3% 5%
	word-wrap: break-word

// I set the background here to overlap the line
.contact_me_header
	@media (min-width: oneoftwobreak)
		background: backgroundtexture
		padding-right: 3%
		float: left

.line
	@media (min-width: oneoftwobreak)
		position: absolute
		border-top: solid 2px fontcolor1
		height: 0
		overflow: visible
		float: right
		width: 47%
		right: 51.75%
		z-index: -1
		margin-top: 0.5rem
		user-select: none

.contact_form_submit
	float: right
	margin: 20px 0 0
	line-height: 1
	text-align: center
	background-color: fontcolor4
	border: none
	box-shadow: inset 0px -2px 0px 0px rgba(0,0,0,0.5)
	text-shadow: 1px 1px 0px rgba(0,0,0,0.15)
	border-radius: 5px
	transition: box-shadow .1s, background-color 0.5s
	user-select: none
	color: white
	width: 100%
	height: 50px
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0)
	@media (min-width: oneoftwobreak)
		width: 25%
		min-width: 120px
		height: 40px
	&:hover
		cursor: hand
		cursor: pointer
		background-color: color6
	&:active
		box-shadow: inset 0px 0px 0px 0px rgba(0,0,0,0.5)
		transform: translateY(1px)

[placeholder]:focus::-webkit-input-placeholder
	color: transparent
	transition: color 0.5s

.social_media
	font-size: 60
	line-height: 1

.validation_helpers
	color: fontcolor4
	float: left
	margin-bottom: 7.5