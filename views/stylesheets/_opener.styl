// intro

#opener
	border-top: none
	height: 100%
	width: 100%
	margin: 0
	padding: 0
	overflow: auto
	display: table
	user-select: none
	cursor: pointer
	&:hover .alt_color
		-webkit-animation: pulse 1s linear 0s infinite alternate
		-moz-animation: pulse 1s linear 0s infinite alternate
		-ms-animation: pulse 1s linear 0s infinite alternate
		-o-animation: pulse 1s linear 0s infinite alternate
		animation: pulse 1s linear 0s infinite alternate

@-webkit-keyframes pulse
	0%
		color: fontcolor3
	100%
		color: fontcolor4
@-moz-keyframes pulse
	0%
		color: fontcolor3
	100%
		color: fontcolor4
@-ms-keyframes pulse
	0%
		color: fontcolor3
	100%
		color: fontcolor4
@-o-keyframes pulse
	0%
		color: fontcolor3
	100%
		color: fontcolor4
@keyframes pulse
	0%
		color: fontcolor3
	100%
		color: fontcolor4

.vert
	display: table-cell
	vertical-align: middle
	padding: margins 0

.brand
	h1fontsizesm = 24
	h1fontsizemed = 30
	h1fontsizelg = 36
	text-align: center
	padding: margins
	h1, h2
		color: fontcolor1
		// transition: color 2s
		letter-spacing: -0.25px
		-webkit-mask-image: -webkit-linear-gradient(top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.7) 50%, rgba(0,0,0,1) 100%)
		padding-bottom: 2%
	h1
		font-size: h1fontsizesm
		line-height: 1em
		margin-bottom: 0
		padding-bottom: 0
		@media (min-width: 26em)
			font-size: h1fontsizemed
		@media (min-width: 44em) and (min-height: maxheight)
			font-size: h1fontsizelg
	h2
		font-size: h1fontsizesm/2
		margin: 0
		margin-left: 40px
		@media (min-width: 26em)
			font-size: h1fontsizemed/2
			margin: 0
			margin-left: 47px
		@media (min-width: 44em) and (min-height: maxheight)
			font-size: h1fontsizelg/2
			margin: 0
			margin-left: 62px

.alt_color
	color: fontcolor3

.intro
	margin: 0 auto
	padding-bottom: 10px
	width: 300px
	@media (min-width: 530px) and (min-height: maxheight)
		margin-top: 40px
		width: 530px
		overflow: auto
	@media (orientation: landscape) and (max-height: maxheight)
		width: 380px
	//this isn't arbitrary or chosen for iPhonesâ€”it's the smallest height that the intro will fit in. Period.
	@media (max-height: 20em), (max-width: 400px) and (orientation: landscape)
		display: none

.cartoon_bubble
	position: relative
	box-sizing: border-box
	border-radius: 20px
	border: solid 5px fontcolor1
	background-color: rgb(240,240,240)
	background: linear-gradient(top, rgb(255,255,255) 0%, rgb(230,230,230) 100%)
	box-shadow: -1px 1px 3px 0px rgba(0,0,0,.5)
	// padding: 35px 20px
	width: 300px
	height: 200px
	float: left
	display: table
	//for small screens, when it can't all fit
	@media (max-height: maxheight)
		height: 125px
		width: 225px
	@media (orientation: portrait)
		float: none
		margin-left: auto
		margin-right: auto
	&:after
		content: " "
		display: block
		position: absolute
		left: 45px
		margin-left: 0
		top: 100%
		margin-top: -4px
		.firefox &
			margin-top: -7px
		transform: rotate(315deg)
		float: none
		width: 15px
		height: 15px
		border-color: fontcolor1
		border-width: 5px
		border-style: none none solid solid
		background-color: rgb(240,240,240)
		@media (orientation: landscape)
			left: 100%
			margin-left: -7px
			.firefox &
				margin-left: -11px
			top: 125px
			transform: rotate(225deg)
			float: left
		@media (orientation: landscape) and (max-height: maxheight)
			top: 80px
	p
		font-size: 12
		margin-left: auto
		margin-right: auto
		width: 12em
		// For small screens, when it can't all fit.
		@media (max-height: maxheight)
			font-size: 10

.author_picture
	background-image: url("/images/James-Headshot.jpg")
	background-image: -webkit-image-set(url("/images/James-Headshot.jpg") 1x, url("/images/James-Headshot@2x.jpg") 2x)
	background-position: center center
	background-size: cover
	overflow: hidden
	margin-top: margins
	margin-left: 50px
	height: 200px
	width: 200px
	box-sizing: border-box
	border: 6px solid fontcolor1
	border-radius: 50%
	box-shadow: inset -6px 12px 20px 0px rgba(255,255,255,0.35), inset 6px -12px 20px 0px rgba(255,255,255,0.15), -1px 1px 3px 0px rgba(0,0,0,.5)
	float: left
	z-index: 2
	@media (min-width: 40em) and (orientation: landscape)
		margin-top: 0
		margin-left: 20px
	// For small screens, when it can't all fit.
	@media (max-height: maxheight)
		height: 100px
		width: 100px
	@media (orientation: portrait)
		float: none
		margin-left: auto
		margin-right: auto
	@media (max-height: maxheight) and (orientation: landscape)
		height: 125px
		width: 125px
		margin-left: 15px
		margin-top: 0
	img
		height: 200px
		width: auto
		z-index: -10
		// For small screens, when it can't all fit.
		@media (max-height: maxheight)
			height: 100px
		@media (max-height: maxheight) and (orientation: landscape)
			height: 125px
