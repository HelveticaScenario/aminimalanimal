#portfolio
	border-top: none
	position: relative
	width: 100%
	overflow: hidden
	user-select: none
	header
		width: 100%
	& > h3, & > h4
		position: relative
		margin: 2.5 0 2.5
		margin-left: 5%

.portfolio_slider_container
	margin: 0
	padding: 0
	width: 100%
	overflow-y: hidden
	overflow-x: scroll

.portfolio_slider
	position: relative
	height: 500px
	max-height: 500px
	overflow: hidden
	// overflow-x: scroll
	// .cssvhunit &
	//     @media (max-height: 500px)
	//         height: 80vh
	//         max-height: 500px
	.cssvwunit &
		padding-left: 5vw
		padding-right: 5vw

.project
	position: relative
	display: inline-block
	float: left
	height: 100%
	width: auto
	padding: 0 margins
	border-right: solid 5px highlightcolor
	perspective: 5000
	cursor: url('/images/cursors/cursor-details.png') 50 50, auto
	&:first-of-type
		padding-left: 0
		img:first-of-type
			margin-left: 0
	&:last-of-type
		padding-right: 0
		border-right: none
		img:last-of-type
			margin-right: 0
	img
		height: 100%
		max-height: 500px
		float: left
		margin: 0 margins
		width: auto
		box-sizing: border-box
		border: 1px solid fontcolor2
		// .cssvhunit &
		//     @media (max-height: 500px)
		//         height: 80vh
		//         max-height: 500px
		&.borderless
			border: none

.group_front
	overflow: auto

.group_front, .group_back
	background: backgroundtexture

.group_back
	display: none
	position: absolute
	bottom: 0
	box-sizing: border-box
	width: 100%
	height: 100%
	z-index: 0
	padding: margins margins*2
	h3
		display: inline-block
	i
		font-size: 20
		// &:first-of-type
		//     margin-left: 10

.content
	columns: 18em
	// @media (min-width: oneofthreebreak)
	//     +columns(20em)
	li, p
		column-break-inside: avoid
	h4
		column-break-before: always
	&.columnless
		columns: 1

/*
	From http://daneden.me/animate/
	*/
.animated
	display: block
	-webkit-animation-fill-mode: both
	-moz-animation-fill-mode: both
	-ms-animation-fill-mode: both
	-o-animation-fill-mode: both
	animation-fill-mode: both
	-webkit-animation-duration: 1s
	-moz-animation-duration: 1s
	-ms-animation-duration: 1s
	-o-animation-duration: 1s
	animation-duration: 1s

.animated.hinge
	-webkit-animation-duration: 2s
	-moz-animation-duration: 2s
	-ms-animation-duration: 2s
	-o-animation-duration: 2s
	animation-duration: 2s

@-webkit-keyframes fadeInUp
	0%
		opacity: 0
		-webkit-transform: translateY(sliderHeight)
	100%
		opacity: maxOpacity
		-webkit-transform: translateY(0)

@-moz-keyframes fadeInUp
	0%
		opacity: 0
		-moz-transform: translateY(sliderHeight)
	100%
		opacity: maxOpacity
		-moz-transform: translateY(0)

@-o-keyframes fadeInUp
	0%
		opacity: 0
		-o-transform: translateY(sliderHeight)
	100%
		opacity: maxOpacity
		-o-transform: translateY(0)

@keyframes fadeInUp
	0%
		opacity: 0
		transform: translateY(sliderHeight)
	100%
		opacity: maxOpacity
		transform: translateY(0)

.fadeInUp
	-webkit-animation-name: fadeInUp
	-moz-animation-name: fadeInUp
	-o-animation-name: fadeInUp
	animation-name: fadeInUp

@-webkit-keyframes fadeOutDown
	0%
		opacity: maxOpacity
		-webkit-transform: translateY(0)
	100%
		opacity: 0
		-webkit-transform: translateY(sliderHeight)

@-moz-keyframes fadeOutDown
	0%
		opacity: maxOpacity
		-moz-transform: translateY(0)
	100%
		opacity: 0
		-moz-transform: translateY(sliderHeight)

@-o-keyframes fadeOutDown
	0%
		opacity: maxOpacity
		-o-transform: translateY(0)
	100%
		opacity: 0
		-o-transform: translateY(sliderHeight)

@keyframes fadeOutDown
	0%
		opacity: maxOpacity
		transform: translateY(0)
	100%
		opacity: 0
		transform: translateY(sliderHeight)

.fadeOutDown
	-webkit-animation-name: fadeOutDown
	-moz-animation-name: fadeOutDown
	-o-animation-name: fadeOutDown
	animation-name: fadeOutDown
